# EP Portal Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DB_HOST=localhost
DB_NAME=your_database_name
DB_USERNAME=your_database_user
DB_PASSWORD=your_secure_password

# Security Configuration (Generate new keys for production)
ENCRYPTION_KEY=generate_32_character_random_string
JWT_SECRET=generate_64_character_random_string

# Infobip API Configuration
INFOBIP_API_KEY=your_infobip_api_key
INFOBIP_BASE_URL=https://your_subdomain.api.infobip.com
INFOBIP_WHATSAPP_NUMBER=your_whatsapp_business_number

# Flutterwave API Configuration
FLUTTERWAVE_PUBLIC_KEY=your_flutterwave_public_key
FLUTTERWAVE_SECRET_KEY=your_flutterwave_secret_key
FLUTTERWAVE_ENCRYPTION_KEY=your_flutterwave_encryption_key
FLUTTERWAVE_ENVIRONMENT=sandbox_or_live

# Email Configuration
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USERNAME=your_email_username
SMTP_PASSWORD=your_email_password
FROM_EMAIL=Your App Name <noreply@yourdomain.com>

# Cloudflare Configuration
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# Application Configuration
APP_ENV=production_or_development
BASE_URL=https://yourdomain.com/
